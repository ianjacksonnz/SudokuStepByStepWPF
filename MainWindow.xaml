<Window x:Class="SudokuStepByStep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sudoku Step By Step" Height="650" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- ComboBox -->
            <RowDefinition Height="*"/>
            <!-- Sudoku grid -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title and Description -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Sudoku Step By Step" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center"/>
            <TextBlock Text="Step through the rules for solving each square in the puzzle" 
                   FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Puzzle selector -->
        <ComboBox x:Name="PuzzleSelector" Grid.Row="1" Width="200" Margin="0,0,0,10"
                  SelectionChanged="PuzzleSelector_SelectionChanged"/>

        <!-- Sudoku grid -->
        <UniformGrid x:Name="SudokuGrid" Grid.Row="2" Rows="9" Columns="9" Margin="5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <!--<Button Content="Show Possible Values" Width="130" Margin="5" Click="ShowPossibleValues_Click"/>-->
            <Button x:Name="StepButton" Content="Step" Width="130" Margin="5" Click="Step_Click"/>
            <!--<Button Content="Solve Puzzle" Width="100" Margin="5" Click="Solve_Click"/>-->
            <Button Content="Clear" Width="100" Margin="5" Click="Clear_Click"/>
        </StackPanel>
    </Grid>
</Window>
