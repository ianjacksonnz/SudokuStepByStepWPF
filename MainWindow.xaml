<Window x:Class="SudokuStepByStep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:SudokuStepByStep.ViewModels"
        Title="Sudoku Step By Step" Height="650" Width="600"
        ResizeMode="CanMinimize">
    <Window.DataContext>
        <viewModels:SudokuViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title and Description -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Sudoku Step By Step" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Step through the rules for solving each square in the puzzle" 
                       FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Puzzle selector and New Puzzle button in a Grid for alignment -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- left spacer -->
                <ColumnDefinition Width="Auto"/>
                <!-- ComboBox -->
                <ColumnDefinition Width="*"/>
                <!-- middle spacer -->
                <ColumnDefinition Width="Auto"/>
                <!-- New Puzzle button -->
            </Grid.ColumnDefinitions>

            <!-- ComboBox centered -->
            <ComboBox x:Name="PuzzleSelector" Width="200"
                      HorizontalAlignment="Left"
                      Margin="110,0,0,0" 
                      VerticalAlignment="Center"
                      ItemsSource="{Binding PuzzleNames}"
                      SelectedItem="{Binding SelectedPuzzle, Mode=TwoWay}"
                      Grid.Column="1"/>

            <!-- Button right aligned -->
            <Button Content="New Puzzle" Width="100" Margin="10,0,0,0" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Command="{Binding NewPuzzleCommand}"
                    Grid.Column="3"/>
        </Grid>

        <!-- Sudoku grid -->
        <UniformGrid x:Name="SudokuGrid" Grid.Row="2" Rows="9" Columns="9" Margin="5"/>

        <!-- Buttons row -->
        <Grid Grid.Row="3" Margin="5,25,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- left spacer -->
                <ColumnDefinition Width="Auto"/>
                <!-- Step button -->
                <ColumnDefinition Width="*"/>
                <!-- middle spacer -->
                <ColumnDefinition Width="Auto"/>
                <!-- Clear button -->
            </Grid.ColumnDefinitions>

            <!-- Centered Step button -->
            <Button x:Name="StepButton" Content="Step" Width="130"
                    HorizontalAlignment="Left"
                    Margin="110,0,0,0" 
                    Command="{Binding StepCommand}"
                    Grid.Column="1"/>

            <!-- Right-aligned Clear button -->
            <Button Content="Clear" Width="100" 
                    HorizontalAlignment="Right"
                    Command="{Binding ClearCommand}"
                    Grid.Column="3"/>
        </Grid>
    </Grid>
</Window>
