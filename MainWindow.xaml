<Window x:Class="SudokuStepByStep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:SudokuStepByStep.ViewModels"
        Title="Sudoku Step By Step" Height="670" Width="600"
        ResizeMode="CanMinimize">
    <Window.DataContext>
        <viewModels:SudokuViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title and Description -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Sudoku Step By Step" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Step through the rules for solving each square in the puzzle" 
                       FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Puzzle selector and New Puzzle button in a Grid for alignment -->
        <Grid Grid.Row="1" Margin="0,0,0,10" Width="432" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left-aligned ComboBox with custom styling and right-side dropdown arrow -->
            <ComboBox x:Name="PuzzleSelector" Width="200" Height="36"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding PuzzleNames}"
                      SelectedItem="{Binding SelectedPuzzle, Mode=TwoWay}"
                      Grid.Column="0"
                      FontSize="15"
                      Padding="8,2"
                      Background="#E3F6FF"
                      BorderBrush="#0078D7"
                      BorderThickness="1.5"
                      Foreground="#222"
                      Margin="0,0,0,0">
                <ComboBox.Resources>
                    <!-- Change the highlight color of items -->
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#B3E5FC"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#E3F6FF"/>
                </ComboBox.Resources>
                <ComboBox.Template>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <ContentPresenter Margin="8,0,32,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>
                                    <ToggleButton x:Name="ToggleButton"
                                                  Grid.Column="1"
                                                  Focusable="False"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                  ClickMode="Press"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Width="32"
                                                  Height="36">
                                        <Path Width="12" Height="12" Stretch="Uniform"
                                              Data="M 0 0 L 4 4 L 8 0 Z"
                                              Fill="#0078D7" Margin="0,0,10,0"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="#E3F6FF" BorderBrush="#0078D7" BorderThickness="1" CornerRadius="4">
                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </ComboBox.Template>
            </ComboBox>

            <!-- Right-aligned New Puzzle button with professional styling -->
            <Button Content="New Puzzle" Width="100" Height="36"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Command="{Binding NewPuzzleCommand}"
                    Grid.Column="2"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="16"
                    BorderThickness="0"
                    Padding="0,4"
                    Margin="0,0,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- Sudoku grid using nested ItemsControls for 2D display, with square aspect ratio -->
        <Border Grid.Row="2" Margin="5" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Width="432" Height="432">
                <ItemsControl ItemsSource="{Binding Grid}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="9" Columns="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" IsItemsHost="True" Margin="0"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="48" Height="48" BorderBrush="Black">
                                            <Border.BorderThickness>
                                                <MultiBinding Converter="{StaticResource SudokuBorderThicknessConverter}">
                                                    <Binding Path="Column"/>
                                                    <Binding Path="Row"/>
                                                </MultiBinding>
                                            </Border.BorderThickness>
                                            <TextBox Text="{Binding Number, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     IsReadOnly="{Binding IsReadOnly}"
                                                     Background="{Binding BackgroundColor}"
                                                     FontSize="20"
                                                     HorizontalContentAlignment="Center"
                                                     VerticalContentAlignment="Center"
                                                     BorderThickness="0"
                                                     Padding="0"
                                                     Margin="0"
                                                     Width="48" Height="48"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- Buttons row -->
        <Grid Grid.Row="3" Margin="0,10,0,0" Width="432" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left-aligned Step button with professional styling -->
            <Button x:Name="StepButton" Content="Step" Width="130" Height="36"
                    HorizontalAlignment="Left"
                    Command="{Binding StepCommand}"
                    Grid.Column="0"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="16"
                    BorderThickness="0"
                    Padding="0,4"
                    Margin="0,0,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Right-aligned Clear button with professional styling -->
            <Button Content="Clear" Width="100" Height="36"
                    HorizontalAlignment="Right"
                    Command="{Binding ClearCommand}"
                    Grid.Column="2"
                    Background="#E81123"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="16"
                    BorderThickness="0"
                    Padding="0,4"
                    Margin="0,0,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
    <Window.Resources>
        <viewModels:SudokuBorderThicknessConverter x:Key="SudokuBorderThicknessConverter"/>
    </Window.Resources>
</Window>
