<Window x:Class="SudokuStepByStep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:SudokuStepByStep.ViewModels"
        Title="Sudoku Step By Step" Height="650" Width="600"
        ResizeMode="CanMinimize">
    <Window.DataContext>
        <viewModels:SudokuViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title and Description -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Sudoku Step By Step" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Step through the rules for solving each square in the puzzle" 
                       FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Puzzle selector and New Puzzle button in a Grid for alignment -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="PuzzleSelector" Width="200"
                      HorizontalAlignment="Left"
                      Margin="110,0,0,0" 
                      VerticalAlignment="Center"
                      ItemsSource="{Binding PuzzleNames}"
                      SelectedItem="{Binding SelectedPuzzle, Mode=TwoWay}"
                      Grid.Column="1"/>

            <Button Content="New Puzzle" Width="100" Margin="10,0,0,0" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Command="{Binding NewPuzzleCommand}"
                    Grid.Column="3"/>
        </Grid>

        <!-- Sudoku grid using nested ItemsControls for 2D display, with no space between cells -->
        <Border Grid.Row="2" Margin="5" BorderBrush="Black" BorderThickness="1">
            <ItemsControl ItemsSource="{Binding Grid}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="9" Columns="1"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ItemsControl ItemsSource="{Binding}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1" Columns="9"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Number, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             IsReadOnly="{Binding IsReadOnly}"
                                             Background="{Binding BackgroundColor}"
                                             FontSize="20"
                                             HorizontalContentAlignment="Center"
                                             VerticalContentAlignment="Center"
                                             BorderThickness="0.5"
                                             BorderBrush="Black"
                                             Padding="0"
                                             Margin="0"
                                             Width="48" Height="48"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- Buttons row -->
        <Grid Grid.Row="3" Margin="5,25,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="StepButton" Content="Step" Width="130"
                    HorizontalAlignment="Left"
                    Margin="110,0,0,0" 
                    Command="{Binding StepCommand}"
                    Grid.Column="1"/>

            <Button Content="Clear" Width="100" 
                    HorizontalAlignment="Right"
                    Command="{Binding ClearCommand}"
                    Grid.Column="3"/>
        </Grid>
    </Grid>
</Window>
