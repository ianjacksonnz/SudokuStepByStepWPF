<Window x:Class="SudokuWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sudoku Solver" Height="650" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ComboBox -->
            <RowDefinition Height="*"/>
            <!-- Sudoku grid -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Puzzle selector -->
        <ComboBox x:Name="PuzzleSelector" Grid.Row="0" Width="200" Margin="0,0,0,10"
                  SelectionChanged="PuzzleSelector_SelectionChanged"/>

        <!-- Sudoku grid -->
        <UniformGrid x:Name="SudokuGrid" Grid.Row="1" Rows="9" Columns="9" Margin="5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Content="Solve" Width="100" Margin="5" Click="Solve_Click"/>
            <Button Content="Clear" Width="100" Margin="5" Click="Clear_Click"/>
            <Button Content="Hint" Width="100" Margin="5" Click="Hint_Click"/>
        </StackPanel>
    </Grid>
</Window>
