<Window x:Class="SudokuStepByStep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:SudokuStepByStep.ViewModels"
        Title="Sudoku Step By Step" Height="650" Width="600"
        ResizeMode="CanMinimize">
    <Window.DataContext>
        <viewModels:SudokuViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title and Description -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Sudoku Step By Step" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Step through the rules for solving each square in the puzzle" 
                       FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Puzzle selector and New Puzzle button in a Grid for alignment -->
        <Grid Grid.Row="1" Margin="0,0,0,10" Width="432" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left-aligned ComboBox -->
            <ComboBox x:Name="PuzzleSelector" Width="200"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding PuzzleNames}"
                      SelectedItem="{Binding SelectedPuzzle, Mode=TwoWay}"
                      Grid.Column="0"/>

            <!-- Right-aligned New Puzzle button -->
            <Button Content="New Puzzle" Width="100"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Command="{Binding NewPuzzleCommand}"
                    Grid.Column="2"/>
        </Grid>

        <!-- Sudoku grid using nested ItemsControls for 2D display, with square aspect ratio -->
        <Border Grid.Row="2" Margin="5" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Width="432" Height="432">
                <ItemsControl ItemsSource="{Binding Grid}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="9" Columns="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" IsItemsHost="True" Margin="0"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="48" Height="48" BorderBrush="Black">
                                            <Border.BorderThickness>
                                                <MultiBinding Converter="{StaticResource SudokuBorderThicknessConverter}">
                                                    <Binding Path="Column"/>
                                                    <Binding Path="Row"/>
                                                </MultiBinding>
                                            </Border.BorderThickness>
                                            <TextBox Text="{Binding Number, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     IsReadOnly="{Binding IsReadOnly}"
                                                     Background="{Binding BackgroundColor}"
                                                     FontSize="20"
                                                     HorizontalContentAlignment="Center"
                                                     VerticalContentAlignment="Center"
                                                     BorderThickness="0"
                                                     Padding="0"
                                                     Margin="0"
                                                     Width="48" Height="48"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- Buttons row -->
        <Grid Grid.Row="3" Margin="5,25,5,5" Width="432" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left-aligned Step button -->
            <Button x:Name="StepButton" Content="Step" Width="130"
                    HorizontalAlignment="Left"
                    Command="{Binding StepCommand}"
                    Grid.Column="0"/>

            <!-- Right-aligned Clear button -->
            <Button Content="Clear" Width="100"
                    HorizontalAlignment="Right"
                    Command="{Binding ClearCommand}"
                    Grid.Column="2"/>
        </Grid>
    </Grid>
    <Window.Resources>
        <viewModels:SudokuBorderThicknessConverter x:Key="SudokuBorderThicknessConverter"/>
    </Window.Resources>
</Window>
