<Window x:Class="SudokuStepByStep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SudokuStepByStep.ViewModels"
        Title="Sudoku Step by Step" Height="700" Width="600">
    <Window.DataContext>
        <vm:SudokuViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Puzzle selector -->
        <ComboBox ItemsSource="{Binding PuzzleNames}"
                  SelectedItem="{Binding SelectedPuzzle}"
                  Grid.Row="0" Margin="5"/>

        <!-- Sudoku grid -->
        <ItemsControl ItemsSource="{Binding Grid}" Grid.Row="1" Margin="5">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ItemsControl ItemsSource="{Binding}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Black" BorderThickness="0.5" Background="{Binding BackgroundColor}" Margin="1">
                                    <TextBox Text="{Binding Number, Mode=TwoWay}"
                                             IsReadOnly="{Binding IsReadOnly}"
                                             HorizontalContentAlignment="Center"
                                             VerticalContentAlignment="Center"
                                             FontSize="20"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="9"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="5">
            <Button Content="Step" Command="{Binding StepCommand}" Margin="2"/>
            <Button Content="Clear" Command="{Binding ClearCommand}" Margin="2"/>
            <Button Content="New Puzzle" Command="{Binding NewPuzzleCommand}" Margin="2"/>
        </StackPanel>
    </Grid>
</Window>
